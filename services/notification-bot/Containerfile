FROM docker.io/library/python:3.11-slim
WORKDIR /app

# Install Poetry and all Python dependencies
COPY pyproject.toml ./
RUN pip install poetry && poetry install --no-root

# Copy proto files for gRPC codegen
COPY proto-context/ ./proto_context/

# Ensure Python can import generated proto code
ENV PYTHONPATH="/app/proto_context:${PYTHONPATH}"

# Copy remaining application source
COPY . .
RUN chmod +x entrypoint.sh

ENTRYPOINT ["./entrypoint.sh"]
